<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_cart_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cart_widget_background"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_shopping_cart"
            android:contentDescription="Shopping Cart"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="My Cart"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <ImageButton
            android:id="@+id/widget_refresh_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_refresh"
            android:background="@android:color/transparent"
            android:contentDescription="Refresh Cart"
            android:scaleType="centerInside" />

    </LinearLayout>

    <!-- Cart Summary -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/cart_summary_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Items: "
                    android:textSize="12sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/widget_cart_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: "
                    android:textSize="12sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/widget_cart_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$45.99"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_cart_full"
            android:contentDescription="Cart Status"
            android:scaleType="centerInside" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/widget_checkout_button"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="Quick Checkout"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/checkout_button_active"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/widget_scan_add_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_add_scan"
            android:background="@drawable/scan_button_background"
            android:contentDescription="Scan and Add"
            android:scaleType="centerInside" />

    </LinearLayout>

    <!-- Status -->
    <TextView
        android:id="@+id/widget_cart_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready to checkout"
        android:textSize="10sp"
        android:textColor="#666666"
        android:gravity="center" />

</LinearLayout>
