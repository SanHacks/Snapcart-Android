<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_deals_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/deals_widget_background"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_deals"
            android:contentDescription="Hot Deals"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”¥ Hot Deals"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/widget_refresh_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_refresh"
            android:background="@android:color/transparent"
            android:contentDescription="Refresh Deals"
            android:scaleType="centerInside" />

    </LinearLayout>

    <!-- Deal Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/deal_content_background"
        android:padding="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/widget_deal_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fresh Fruits 30% OFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/widget_deal_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All fresh fruits including apples, bananas, oranges"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_timer"
                android:contentDescription="Timer"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/widget_time_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ends in 5h 30m"
                android:textSize="11sp"
                android:textColor="#FF6B35"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All â†’"
                android:textSize="11sp"
                android:textColor="#4CAF50"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Status -->
    <TextView
        android:id="@+id/widget_last_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Updated: 12:30"
        android:textSize="10sp"
        android:textColor="#CCCCCC"
        android:gravity="center" />

</LinearLayout>
