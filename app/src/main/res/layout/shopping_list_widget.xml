<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_shopping_list"
            android:contentDescription="Shopping List"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Shopping List"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/widget_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF6B35"
            android:background="@drawable/count_badge"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:minWidth="32dp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Quick Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/widget_add_button"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="+ Add Item"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/add_button_background"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/widget_scan_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_barcode"
            android:background="@drawable/scan_button_background"
            android:contentDescription="Scan Barcode"
            android:scaleType="centerInside" />

    </LinearLayout>

    <!-- Status -->
    <TextView
        android:id="@+id/widget_last_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Updated: Just now"
        android:textSize="10sp"
        android:textColor="#666666"
        android:gravity="center" />

</LinearLayout>
