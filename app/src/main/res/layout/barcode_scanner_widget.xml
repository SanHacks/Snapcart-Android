<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_scanner_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/scanner_widget_background"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_scanner"
            android:contentDescription="Scanner"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quick Scanner"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/widget_scan_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFD700"
            android:background="@drawable/scan_count_badge"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:minWidth="24dp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Scanner Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/widget_scan_barcode_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="ðŸ“Š Barcode"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/barcode_button_background"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/widget_scan_qr_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="â¬› QR Code"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/qr_button_background" />

    </LinearLayout>

    <!-- Last Scan Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/last_scan_background"
        android:padding="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Scan:"
            android:textSize="10sp"
            android:textColor="#999999"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/widget_last_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No recent scans"
            android:textSize="12sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true" />

    </LinearLayout>

    <!-- Status -->
    <TextView
        android:id="@+id/widget_last_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready to scan"
        android:textSize="10sp"
        android:textColor="#CCCCCC"
        android:gravity="center" />

</LinearLayout>
