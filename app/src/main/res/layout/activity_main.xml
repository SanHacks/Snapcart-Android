<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/activity_main_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Loading Screen -->
    <LinearLayout
        android:id="@+id/loading_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/loading_screen_background"
        android:padding="32dp">

        <!-- App Logo/Icon -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="24dp"
            android:contentDescription="Snap Cart Logo" />

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- App Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_description"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="32dp"
            android:gravity="center" />

        <!-- Progress Indicator -->
        <ProgressBar
            android:id="@+id/loading_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_marginBottom="16dp" />

        <!-- Loading Text -->
        <TextView
            android:id="@+id/loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading your shopping experience..."
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- Connection Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/connection_status_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_wifi_connecting"
                android:layout_marginEnd="8dp"
                android:contentDescription="Connection Status" />

            <TextView
                android:id="@+id/connection_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connecting to SnapCart ZA..."
                android:textSize="12sp"
                android:textColor="#999999" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>